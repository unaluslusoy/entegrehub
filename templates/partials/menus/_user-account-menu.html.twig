<!--begin::User account menu-->
<div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg menu-state-color fw-semibold py-4 fs-6 w-275px" data-kt-menu="true">
<!--begin::Menu item-->
<div class="menu-item px-3">
<div class="menu-content d-flex align-items-center px-3">
<!--begin::Avatar-->
<div class="symbol symbol-50px me-5">
{% if app.user %}
<span class="symbol-label bg-primary text-inverse-primary fw-bold fs-2x">{{ app.user.firstName|slice(0, 1)|upper }}</span>
{% else %}
<span class="symbol-label bg-secondary text-inverse-secondary fw-bold fs-2x">?</span>
{% endif %}
</div>
<!--end::Avatar-->
<!--begin::Username-->
<div class="d-flex flex-column">
<div class="fw-bold d-flex align-items-center fs-5">
{% if app.user %}
{{ app.user.fullName }}
{% else %}
Misafir
{% endif %}
</div>
<a href="#" class="fw-semibold text-muted text-hover-primary fs-7">
{% if app.user %}
{{ app.user.email }}
{% endif %}
</a>
</div>
<!--end::Username-->
</div>
</div>
<!--end::Menu item-->
<!--begin::Menu separator-->
<div class="separator my-2"></div>
<!--end::Menu separator-->

<!--begin::Menu item-->
<div class="menu-item px-5">
<a href="#" class="menu-link px-5">
<span class="menu-icon">{{ theme.getIcon('profile-circle', 'fs-3') | raw }}</span>
<span class="menu-title">Hesabım</span>
</a>
</div>
<!--end::Menu item-->

<!--begin::Menu item-->
<div class="menu-item px-5">
<a href="#" class="menu-link px-5">
<span class="menu-icon">{{ theme.getIcon('setting-2', 'fs-3') | raw }}</span>
<span class="menu-title">Ayarlar</span>
</a>
</div>
<!--end::Menu item-->

<!--begin::Menu separator-->
<div class="separator my-2"></div>
<!--end::Menu separator-->

<!--begin::Menu item-->
<div class="menu-item px-5">
<a href="{{ path('app_logout') }}" class="menu-link px-5">
<span class="menu-icon">{{ theme.getIcon('exit-right', 'fs-3') | raw }}</span>
<span class="menu-title">Çıkış Yap</span>
</a>
</div>
<!--end::Menu item-->
</div>
<!--end::User account menu-->
