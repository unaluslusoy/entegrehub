{% extends 'layout/master.html.twig' %}

{% block layout %}

    <!--begin::Root-->
    <div class="d-flex flex-column flex-root" id="kt_app_root">
        <!--begin::Wrapper-->
        <div class="d-flex flex-column flex-lg-row flex-column-fluid">
            <!--begin::Body-->
            <div class="d-flex flex-column flex-lg-row-fluid w-lg-50 p-10 order-2 order-lg-1">
                <!--begin::Form-->
                <div class="d-flex flex-center flex-column flex-lg-row-fluid">
                    <!--begin::Wrapper-->
                    <div class="w-lg-500px p-10">
                        <!--begin::Page-->
                        {% block content %}{% endblock %}
                        <!--end::Page-->
                    </div>
                    <!--end::Wrapper-->
                </div>
                <!--end::Form-->

                <!--begin::Footer-->
                <div class="px-5 pt-10">
                    <div class="row align-items-center">
                        <!--begin::Links-->
                        <div class="col-md-4 text-center text-md-start mb-3 mb-md-0">
                            <div class="d-flex flex-wrap justify-content-center justify-content-md-start gap-3 fw-semibold fs-base">
                                <a href="{{ path('app_about') }}" class="text-gray-600 text-hover-primary">{{ 'general.about'|trans }}</a>
                                <a href="https://entegrehub.com/fiyatlandirma" class="text-gray-600 text-hover-primary" target="_blank">{{ 'general.pricing'|trans }}</a>
                                <a href="{{ path('app_support') }}" class="text-gray-600 text-hover-primary">{{ 'general.contact'|trans }}</a>
                            </div>
                        </div>
                        <!--end::Links-->
                        
                        <!--begin::Copyright-->
                        <div class="col-md-4 text-center mb-3 mb-md-0">
                            <span class="text-gray-600 fw-semibold fs-7">
                                {{ 'general.copyright'|trans }}
                            </span>
                            <br>
                            <span class="text-gray-500 fw-semibold fs-8">
                                {{ 'general.powered_by'|trans }} <a href="https://timeon.digital" class="text-gray-600 text-hover-primary" target="_blank">Timeon Digital</a>
                            </span>
                        </div>
                        <!--end::Copyright-->
                        
                        <!--begin::Language-->
                        <div class="col-md-4 text-center text-md-end">
                            <!--begin::Toggle-->
                            <button class="btn btn-flex btn-link btn-color-gray-700 btn-active-color-primary rotate fs-base" data-kt-menu-trigger="click" data-kt-menu-placement="top-start" data-kt-menu-offset="0px, 0px">
                                {% if app.request.locale == 'en' %}
                                    <img class="w-20px h-20px rounded me-3" src="/assets/media/flags/united-states.svg" alt="English"/>
                                    <span class="me-1">{{ 'general.english'|trans }}</span>
                                {% else %}
                                    <img class="w-20px h-20px rounded me-3" src="/assets/media/flags/turkey.svg" alt="Türkçe"/>
                                    <span class="me-1">{{ 'general.turkish'|trans }}</span>
                                {% endif %}
                                <span class="d-flex flex-center rotate-180">
                                    <i class="ki-duotone ki-down fs-5 text-muted m-0"></i>
                                </span>
                            </button>
                            <!--end::Toggle-->

                            <!--begin::Menu-->
                            <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-800 menu-state-bg-light-primary fw-semibold w-200px py-4 fs-7" data-kt-menu="true" id="kt_auth_lang_menu">
                                <!--begin::Menu item-->
                                <div class="menu-item px-3">
                                    <a href="{{ path('change_locale', {locale: 'tr'}) }}" class="menu-link d-flex px-5 {{ app.request.locale == 'tr' ? 'active' : '' }}">
                                        <span class="symbol symbol-20px me-4">
                                            <img class="rounded-1" src="/assets/media/flags/turkey.svg" alt="Türkçe"/>
                                        </span>
                                        <span>{{ 'general.turkish'|trans }}</span>
                                    </a>
                                </div>
                                <!--end::Menu item-->
                                <!--begin::Menu item-->
                                <div class="menu-item px-3">
                                    <a href="{{ path('change_locale', {locale: 'en'}) }}" class="menu-link d-flex px-5 {{ app.request.locale == 'en' ? 'active' : '' }}">
                                        <span class="symbol symbol-20px me-4">
                                            <img class="rounded-1" src="/assets/media/flags/united-states.svg" alt="English"/>
                                        </span>
                                        <span>{{ 'general.english'|trans }}</span>
                                    </a>
                                </div>
                                <!--end::Menu item-->
                            </div>
                            <!--end::Menu-->
                        </div>
                        <!--end::Language-->
                    </div>
                </div>
                <!--end::Footer-->
            </div>
            <!--end::Body-->

            <!--begin::Aside-->
            <div class="d-flex flex-lg-row-fluid w-lg-50 bgi-size-cover bgi-position-center order-1 order-lg-2" style="background-image: url({{ theme.image('misc/auth-bg.png') }})">
                <!--begin::Content-->
                <div class="d-flex flex-column flex-center py-7 py-lg-15 px-5 px-md-15 w-100">
                    <!--begin::Logo-->
                    <a href="/" class="mb-12 text-decoration-none d-flex align-items-center justify-content-center">
                        {{ theme.getIcon('connect', 'fs-3x text-white me-3') | raw }}
                        <div>
                            <h1 class="text-white fw-bolder fs-2x fs-lg-3x mb-0">
                                <span class="text-white">Entegre</span><span class="text-gray-400">HUB</span>
                            </h1>
                            <p class="text-gray-400 fs-6 mb-0 text-center">Shopify Entegrasyon Çözümleri</p>
                        </div>
                    </a>
                    <!--end::Logo-->

                    <!--begin::Image-->
                    <img class="d-none d-lg-block mx-auto w-275px w-md-50 w-xl-500px mb-10 mb-lg-20" src="{{ theme.image('misc/auth-screens.png') }}" alt=""/>
                    <!--end::Image-->

                    <!--begin::Title-->
                    <h1 class="d-none d-lg-block text-white fs-2qx fw-bolder text-center mb-7">
                        Hızlı, Verimli ve Güvenilir
                    </h1>
                    <!--end::Title-->

                    <!--begin::Text-->
                    <div class="d-none d-lg-block text-white fs-base text-center">
                        <span class="fw-bold">EntegreHub Kargo</span> ile Shopify mağazanızın <br/> 
                        kargo süreçlerini tek bir yerden yönetin. <br/>
                        <span class="opacity-75">Yurtiçi, MNG, Sürat, Aras ve daha fazla kargo firması <br/> 
                        entegrasyonu ile işlerinizi hızlandırın.</span>
                    </div>
                    <!--end::Text-->
                </div>
                <!--end::Content-->
            </div>
            <!--end::Aside-->
        </div>
        <!--end::Wrapper-->
    </div>
    <!--end::Root-->

{% endblock %}
