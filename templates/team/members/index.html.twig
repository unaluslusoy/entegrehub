{% extends 'layout/base.html.twig' %}

{% block title %}Ekip Üyeleri{% endblock %}

{% block toolbar %}
    <div class="d-flex align-items-center gap-2 gap-lg-3">
        <a href="{{ path('team_members_invite') }}" class="btn btn-sm btn-primary">
            <i class="ki-duotone ki-plus fs-3"></i>
            Ekip Üyesi Davet Et
        </a>
    </div>
{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-header border-0 pt-6">
            <h3 class="card-title align-items-start flex-column">
                <span class="card-label fw-bold fs-3 mb-1">Ekip Üyeleri</span>
                <span class="text-muted mt-1 fw-semibold fs-7">{{ teamMembers|length }} üye</span>
            </h3>

            <div class="card-toolbar">
                <div class="d-flex justify-content-end" data-kt-user-table-toolbar="base">
                    <div class="position-relative me-3">
                        <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5 mt-3">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                        <input type="text" class="form-control form-control-solid w-250px ps-13" placeholder="Ara...">
                    </div>
                </div>
            </div>
        </div>

        <div class="card-body py-4">
            <div class="table-responsive">
                <table class="table align-middle table-row-dashed fs-6 gy-5">
                    <thead>
                        <tr class="text-start text-muted fw-bold fs-7 text-uppercase gs-0">
                            <th class="min-w-250px">Kullanıcı</th>
                            <th class="min-w-125px">Roller</th>
                            <th class="min-w-125px">Son Giriş</th>
                            <th class="min-w-100px">Durum</th>
                            <th class="text-end min-w-100px">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody class="text-gray-600 fw-semibold">
                        {% for member in teamMembers %}
                        <tr>
                            <td>
                                <div class="d-flex align-items-center">
                                    <div class="symbol symbol-circle symbol-50px overflow-hidden me-3">
                                        <div class="symbol-label">
                                            <div class="symbol-label fs-3 bg-light-primary text-primary">
                                                {{ member.firstName[0] }}{{ member.lastName[0] }}
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex flex-column">
                                        <span class="text-gray-800 fw-bold mb-1">{{ member.firstName }} {{ member.lastName }}</span>
                                        <span class="text-muted fs-7">{{ member.email }}</span>
                                    </div>
                                </div>
                            </td>
                            <td>
                                {% if member.userRoles|length > 0 %}
                                    {% for role in member.userRoles %}
                                        <span class="badge badge-light-primary me-1">{{ role.name }}</span>
                                    {% endfor %}
                                {% else %}
                                    <span class="text-muted">-</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if member.lastLoginAt %}
                                    {{ member.lastLoginAt|date('d.m.Y H:i') }}
                                {% else %}
                                    <span class="text-muted">Giriş yapmamış</span>
                                {% endif %}
                            </td>
                            <td>
                                {% if member.isActive %}
                                    <span class="badge badge-light-success">Aktif</span>
                                {% else %}
                                    <span class="badge badge-light-danger">Pasif</span>
                                {% endif %}
                            </td>
                            <td class="text-end">
                                {% if member.id != currentUser.id %}
                                    <a href="{{ path('team_members_edit', {id: member.id}) }}" 
                                       class="btn btn-icon btn-sm btn-light-primary me-1">
                                        <i class="ki-duotone ki-pencil fs-5">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                    </a>

                                    <button type="button" 
                                            class="btn btn-icon btn-sm {{ member.isActive ? 'btn-light-danger' : 'btn-light-success' }} me-1"
                                            onclick="toggleMember({{ member.id }})">
                                        <i class="ki-duotone ki-toggle-{{ member.isActive ? 'off' : 'on' }} fs-2">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                    </button>

                                    <button type="button" 
                                            class="btn btn-icon btn-sm btn-light-danger"
                                            onclick="deleteMember({{ member.id }})">
                                        <i class="ki-duotone ki-trash fs-5">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                            <span class="path3"></span>
                                            <span class="path4"></span>
                                            <span class="path5"></span>
                                        </i>
                                    </button>
                                {% else %}
                                    <span class="badge badge-light-info">Siz</span>
                                {% endif %}
                            </td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        function toggleMember(id) {
            fetch(`/team/members/${id}/toggle`, {
                method: 'POST',
                headers: {
                    'X-Requested-With': 'XMLHttpRequest'
                }
            })
            .then(response => response.json())
            .then(data => {
                if (data.success) {
                    toastr.success(data.message);
                    setTimeout(() => location.reload(), 1000);
                }
            });
        }

        function deleteMember(id) {
            Swal.fire({
                title: 'Emin misiniz?',
                text: "Bu ekip üyesini silmek istediğinizden emin misiniz?",
                icon: 'warning',
                showCancelButton: true,
                confirmButtonText: 'Evet, sil!',
                cancelButtonText: 'İptal'
            }).then((result) => {
                if (result.isConfirmed) {
                    fetch(`/team/members/${id}/delete`, {
                        method: 'POST',
                        headers: {
                            'X-Requested-With': 'XMLHttpRequest'
                        }
                    })
                    .then(response => response.json())
                    .then(data => {
                        if (data.success) {
                            toastr.success(data.message);
                            setTimeout(() => location.reload(), 1000);
                        } else {
                            toastr.error(data.message);
                        }
                    });
                }
            });
        }
    </script>
{% endblock %}
