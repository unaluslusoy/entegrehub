{% extends 'layout/_user.html.twig' %}

{% block title %}{{ store.shopName ?? store.shopDomain }} - Ayarlar{% endblock %}

{% block page_title %}Shopify Ayarları{% endblock %}

{% block content %}
    <div class="container-xxl">
        <div class="row">
            <div class="col-lg-8">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Mağaza Bilgileri</h3>
                    </div>
                    <form method="post" action="{{ path('user_shopify_settings', {id: store.id}) }}">
                        <div class="card-body">
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-semibold text-muted">Mağaza Adı</label>
                                <div class="col-lg-8">
                                    <span class="fw-bold fs-6 text-gray-800">{{ store.shopName ?? '-' }}</span>
                                </div>
                            </div>
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-semibold text-muted">Alan Adı</label>
                                <div class="col-lg-8">
                                    <span class="fw-bold fs-6 text-gray-800">{{ store.shopDomain }}</span>
                                </div>
                            </div>
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-semibold text-muted">E-posta</label>
                                <div class="col-lg-8">
                                    <span class="fw-bold fs-6 text-gray-800">{{ store.shopEmail ?? '-' }}</span>
                                </div>
                            </div>
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-semibold text-muted">Para Birimi</label>
                                <div class="col-lg-8">
                                    <span class="fw-bold fs-6 text-gray-800">{{ store.shopCurrency ?? '-' }}</span>
                                </div>
                            </div>
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-semibold text-muted">Saat Dilimi</label>
                                <div class="col-lg-8">
                                    <span class="fw-bold fs-6 text-gray-800">{{ store.shopTimezone ?? '-' }}</span>
                                </div>
                            </div>
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-semibold text-muted">Shopify Planı</label>
                                <div class="col-lg-8">
                                    <span class="badge badge-light-primary">{{ store.shopPlan ? store.shopPlan|upper : '-' }}</span>
                                </div>
                            </div>
                            
                            <div class="separator my-7"></div>
                            
                            <div class="row mb-7">
                                <label class="col-lg-4 fw-semibold text-muted">
                                    Webhook Adresi
                                    <i class="fas fa-exclamation-circle ms-1 fs-7" 
                                       data-bs-toggle="tooltip" 
                                       title="Shopify'ın webhook'ları göndereceği URL"></i>
                                </label>
                                <div class="col-lg-8">
                                    <input type="text" 
                                           name="webhook_address" 
                                           class="form-control form-control-solid" 
                                           value="{{ store.webhookAddress }}"
                                           placeholder="https://yourdomain.com/user/shopify/webhook" />
                                </div>
                            </div>
                        </div>
                        <div class="card-footer d-flex justify-content-end py-6 px-9">
                            <a href="{{ path('user_shopify_store_detail', {id: store.id}) }}" 
                               class="btn btn-light btn-active-light-primary me-2">İptal</a>
                            <button type="submit" class="btn btn-primary">Kaydet</button>
                        </div>
                    </form>
                </div>
            </div>
            
            <div class="col-lg-4">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">OAuth Bilgileri</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-7">
                            <label class="fw-semibold text-muted mb-2">API Key</label>
                            <div class="input-group">
                                <input type="password" 
                                       class="form-control form-control-solid" 
                                       value="{{ store.apiKey }}" 
                                       readonly 
                                       id="apiKeyInput" />
                                <button class="btn btn-light-secondary" type="button" id="toggleApiKey">
                                    <i class="ki-duotone ki-eye fs-2"></i>
                                </button>
                            </div>
                        </div>
                        
                        <div class="mb-7">
                            <label class="fw-semibold text-muted mb-2">Scopes</label>
                            <div class="d-flex flex-wrap gap-2">
                                {% for scope in store.scopes|split(',') %}
                                    <span class="badge badge-light-info">{{ scope }}</span>
                                {% endfor %}
                            </div>
                        </div>
                        
                        <div class="mb-7">
                            <label class="fw-semibold text-muted mb-2">Bağlantı Tarihi</label>
                            <div class="fw-bold text-gray-800">{{ store.createdAt|date('d.m.Y H:i') }}</div>
                        </div>
                        
                        <div>
                            <label class="fw-semibold text-muted mb-2">Son Güncelleme</label>
                            <div class="fw-bold text-gray-800">{{ store.updatedAt|date('d.m.Y H:i') }}</div>
                        </div>
                    </div>
                </div>
                
                <div class="card mt-6">
                    <div class="card-header bg-danger">
                        <h3 class="card-title text-white">Tehlikeli Bölge</h3>
                    </div>
                    <div class="card-body">
                        <p class="text-gray-600 mb-5">
                            Mağaza bağlantısını kesmek, tüm webhook'ları ve senkronizasyon ayarlarını kaldıracaktır.
                        </p>
                        <form method="post" 
                              action="{{ path('user_shopify_disconnect', {id: store.id}) }}" 
                              onsubmit="return confirm('Mağaza bağlantısını kesmek istediğinize emin misiniz? Bu işlem geri alınamaz.')">
                            <button type="submit" class="btn btn-danger w-100">
                                <i class="ki-duotone ki-disconnect fs-2">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                    <span class="path3"></span>
                                    <span class="path4"></span>
                                    <span class="path5"></span>
                                </i>
                                Bağlantıyı Kes
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.getElementById('toggleApiKey').addEventListener('click', function() {
            const input = document.getElementById('apiKeyInput');
            const icon = this.querySelector('i');
            
            if (input.type === 'password') {
                input.type = 'text';
                icon.classList.remove('ki-eye');
                icon.classList.add('ki-eye-slash');
            } else {
                input.type = 'password';
                icon.classList.remove('ki-eye-slash');
                icon.classList.add('ki-eye');
            }
        });
    </script>
{% endblock %}
