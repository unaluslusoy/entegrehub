{% extends 'layout/_user.html.twig' %}

{% block title %}Etiket Tasarımcısı{% endblock %}

{% block content %}
<div class="d-flex flex-column flex-column-fluid">
    {# Toolbar #}
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">
                    Etiket Tasarımcısı
                </h1>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="{{ path('user_dashboard') }}" class="text-muted text-hover-primary">Ana Sayfa</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-500 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">Etiket Tasarımcısı</li>
                </ul>
            </div>
            <div class="d-flex align-items-center gap-2 gap-lg-3">
                <a href="{{ path('user_label_designer_create') }}" class="btn btn-sm fw-bold btn-primary">
                    <i class="ki-duotone ki-plus fs-2"></i>
                    Yeni Şablon Oluştur
                </a>
            </div>
        </div>
    </div>

    {# Content #}
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-xxl">
            {# Statistics Cards #}
            <div class="row g-5 g-xl-10 mb-5 mb-xl-10">
                <div class="col-md-4">
                    <div class="card card-flush bgi-no-repeat bgi-size-contain bgi-position-x-end h-md-50 mb-5 mb-xl-10" style="background-color: #F1416C;">
                        <div class="card-header pt-5">
                            <div class="card-title d-flex flex-column">
                                <span class="fs-2hx fw-bold text-white me-2 lh-1 ls-n2">{{ templates|length }}</span>
                                <span class="text-white opacity-75 pt-1 fw-semibold fs-6">Toplam Şablon</span>
                            </div>
                        </div>
                        <div class="card-body d-flex align-items-end pt-0">
                            <div class="d-flex align-items-center flex-column mt-3 w-100">
                                <div class="d-flex justify-content-between fw-bold fs-6 text-white opacity-75 w-100 mt-auto mb-2">
                                    <span>Aktif Şablonlar</span>
                                    <span>{{ templates|filter(t => t.isActive)|length }}</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card card-flush bgi-no-repeat bgi-size-contain bgi-position-x-end h-md-50 mb-5 mb-xl-10" style="background-color: #7239EA;">
                        <div class="card-header pt-5">
                            <div class="card-title d-flex flex-column">
                                <span class="fs-2hx fw-bold text-white me-2 lh-1 ls-n2">
                                    {{ templates|filter(t => t.isDefault)|length }}
                                </span>
                                <span class="text-white opacity-75 pt-1 fw-semibold fs-6">Varsayılan Şablon</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    <div class="card card-flush bgi-no-repeat bgi-size-contain bgi-position-x-end h-md-50 mb-5 mb-xl-10" style="background-color: #17C653;">
                        <div class="card-header pt-5">
                            <div class="card-title d-flex flex-column">
                                <span class="fs-2hx fw-bold text-white me-2 lh-1 ls-n2">
                                    {{ templates|map(t => t.usageCount)|reduce((a, b) => a + b, 0) }}
                                </span>
                                <span class="text-white opacity-75 pt-1 fw-semibold fs-6">Toplam Kullanım</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            {# Import/Export Section #}
            <div class="card mb-5 mb-xl-10">
                <div class="card-header">
                    <h3 class="card-title">İçe/Dışa Aktarma</h3>
                </div>
                <div class="card-body">
                    <div class="row g-5">
                        <div class="col-md-6">
                            <label class="form-label">Şablon İçe Aktar</label>
                            <form id="import-form" enctype="multipart/form-data">
                                <input type="file" class="form-control" id="template-file" name="template_file" accept=".json">
                                <div class="form-text">JSON formatında şablon dosyası yükleyin</div>
                            </form>
                        </div>
                        <div class="col-md-6 d-flex align-items-end">
                            <button type="button" class="btn btn-light-primary" id="import-btn">
                                <i class="ki-duotone ki-file-up fs-2">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                </i>
                                İçe Aktar
                            </button>
                        </div>
                    </div>
                </div>
            </div>

            {# Templates Grid #}
            <div class="row g-6 g-xl-9">
                {% if templates is empty %}
                    <div class="col-12">
                        <div class="card">
                            <div class="card-body text-center py-20">
                                <i class="ki-duotone ki-note-2 fs-5x text-gray-400 mb-5">
                                    <span class="path1"></span>
                                    <span class="path2"></span>
                                    <span class="path3"></span>
                                    <span class="path4"></span>
                                </i>
                                <h3 class="text-gray-800 mb-3">Henüz şablon yok</h3>
                                <p class="text-gray-600 mb-5">
                                    Kendi özel etiket şablonlarınızı oluşturmaya başlayın
                                </p>
                                <a href="{{ path('user_label_designer_create') }}" class="btn btn-primary">
                                    <i class="ki-duotone ki-plus fs-2"></i>
                                    İlk Şablonunu Oluştur
                                </a>
                            </div>
                        </div>
                    </div>
                {% else %}
                    {% for template in templates %}
                        <div class="col-md-6 col-xl-4">
                            <div class="card h-100">
                                {# Template Preview #}
                                <div class="card-header border-0 pt-9">
                                    <div class="card-title m-0">
                                        <div class="symbol symbol-50px w-50px bg-light">
                                            <i class="ki-duotone ki-note-2 fs-2x text-primary">
                                                <span class="path1"></span>
                                                <span class="path2"></span>
                                                <span class="path3"></span>
                                                <span class="path4"></span>
                                            </i>
                                        </div>
                                    </div>
                                    <div class="card-toolbar">
                                        {% if template.isDefault %}
                                            <span class="badge badge-light-success">Varsayılan</span>
                                        {% endif %}
                                        {% if not template.isActive %}
                                            <span class="badge badge-light-danger">Pasif</span>
                                        {% endif %}
                                    </div>
                                </div>

                                <div class="card-body p-9">
                                    {# Template Name #}
                                    <div class="fs-3 fw-bold text-gray-900 mb-1">
                                        {{ template.name }}
                                    </div>

                                    {# Description #}
                                    {% if template.description %}
                                        <p class="text-gray-600 fw-semibold fs-5 mb-4">
                                            {{ template.description|slice(0, 80) }}{% if template.description|length > 80 %}...{% endif %}
                                        </p>
                                    {% endif %}

                                    {# Template Info #}
                                    <div class="d-flex flex-wrap mb-5">
                                        <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 me-3 mb-3">
                                            <div class="fs-6 text-gray-800 fw-bold">{{ template.width }}x{{ template.height }}mm</div>
                                            <div class="fw-semibold text-gray-500">Boyut</div>
                                        </div>
                                        <div class="border border-gray-300 border-dashed rounded min-w-125px py-3 px-4 mb-3">
                                            <div class="fs-6 text-gray-800 fw-bold">{{ template.usageCount }}</div>
                                            <div class="fw-semibold text-gray-500">Kullanım</div>
                                        </div>
                                    </div>

                                    {# Metadata #}
                                    <div class="mb-3">
                                        <span class="badge badge-light">{{ template.category|upper }}</span>
                                        <span class="badge badge-light">{{ template.orientation|upper }}</span>
                                    </div>

                                    <div class="fs-7 text-gray-600 mb-5">
                                        Oluşturma: {{ template.createdAt|date('d.m.Y H:i') }}
                                    </div>

                                    {# Actions #}
                                    <div class="d-flex flex-wrap gap-2">
                                        <a href="{{ path('user_label_designer_edit', {id: template.id}) }}"
                                           class="btn btn-sm btn-light-primary flex-grow-1">
                                            <i class="ki-duotone ki-pencil fs-3"></i>
                                            Düzenle
                                        </a>
                                        <a href="{{ path('user_label_designer_preview', {id: template.id}) }}"
                                           class="btn btn-sm btn-light-info"
                                           target="_blank">
                                            <i class="ki-duotone ki-eye fs-3"></i>
                                        </a>
                                        <button type="button"
                                                class="btn btn-sm btn-light"
                                                data-bs-toggle="dropdown">
                                            <i class="ki-duotone ki-dots-horizontal fs-3"></i>
                                        </button>
                                        <div class="dropdown-menu">
                                            {% if not template.isDefault %}
                                                <a class="dropdown-item set-default-btn"
                                                   href="#"
                                                   data-template-id="{{ template.id }}">
                                                    <i class="ki-duotone ki-check-circle fs-3 me-2"></i>
                                                    Varsayılan Yap
                                                </a>
                                            {% endif %}
                                            <a class="dropdown-item duplicate-btn"
                                               href="#"
                                               data-template-id="{{ template.id }}">
                                                <i class="ki-duotone ki-copy fs-3 me-2"></i>
                                                Kopyala
                                            </a>
                                            <a class="dropdown-item"
                                               href="{{ path('user_label_designer_export', {id: template.id}) }}">
                                                <i class="ki-duotone ki-file-down fs-3 me-2"></i>
                                                Dışa Aktar
                                            </a>
                                            <div class="dropdown-divider"></div>
                                            {% if not template.isDefault %}
                                                <a class="dropdown-item text-danger delete-btn"
                                                   href="#"
                                                   data-template-id="{{ template.id }}">
                                                    <i class="ki-duotone ki-trash fs-3 me-2"></i>
                                                    Sil
                                                </a>
                                            {% endif %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endfor %}
                {% endif %}
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
$(document).ready(function() {
    // Import template
    $('#import-btn').on('click', function() {
        const fileInput = $('#template-file')[0];
        if (!fileInput.files.length) {
            Swal.fire('Hata', 'Lütfen bir dosya seçin', 'error');
            return;
        }

        const formData = new FormData();
        formData.append('template_file', fileInput.files[0]);

        $.ajax({
            url: '{{ path('user_label_designer_import') }}',
            type: 'POST',
            data: formData,
            processData: false,
            contentType: false,
            success: function(response) {
                if (response.success) {
                    Swal.fire({
                        title: 'Başarılı!',
                        text: response.message,
                        icon: 'success',
                        confirmButtonText: 'Tamam'
                    }).then(() => {
                        window.location.reload();
                    });
                } else {
                    Swal.fire('Hata', response.message, 'error');
                }
            },
            error: function() {
                Swal.fire('Hata', 'Şablon içe aktarılırken bir hata oluştu', 'error');
            }
        });
    });

    // Set as default
    $('.set-default-btn').on('click', function(e) {
        e.preventDefault();
        const templateId = $(this).data('template-id');

        $.ajax({
            url: `/user/label-designer/${templateId}/set-default`,
            type: 'POST',
            success: function(response) {
                if (response.success) {
                    Swal.fire({
                        title: 'Başarılı!',
                        text: response.message,
                        icon: 'success',
                        confirmButtonText: 'Tamam'
                    }).then(() => {
                        window.location.reload();
                    });
                } else {
                    Swal.fire('Hata', response.message, 'error');
                }
            },
            error: function() {
                Swal.fire('Hata', 'İşlem sırasında bir hata oluştu', 'error');
            }
        });
    });

    // Duplicate template
    $('.duplicate-btn').on('click', function(e) {
        e.preventDefault();
        const templateId = $(this).data('template-id');

        $.ajax({
            url: `/user/label-designer/${templateId}/duplicate`,
            type: 'POST',
            success: function(response) {
                if (response.success) {
                    Swal.fire({
                        title: 'Başarılı!',
                        text: response.message,
                        icon: 'success',
                        confirmButtonText: 'Tamam'
                    }).then(() => {
                        window.location.reload();
                    });
                } else {
                    Swal.fire('Hata', response.message, 'error');
                }
            },
            error: function() {
                Swal.fire('Hata', 'Şablon kopyalanırken bir hata oluştu', 'error');
            }
        });
    });

    // Delete template
    $('.delete-btn').on('click', function(e) {
        e.preventDefault();
        const templateId = $(this).data('template-id');

        Swal.fire({
            title: 'Emin misiniz?',
            text: "Bu şablon kalıcı olarak silinecek!",
            icon: 'warning',
            showCancelButton: true,
            confirmButtonColor: '#d33',
            cancelButtonColor: '#3085d6',
            confirmButtonText: 'Evet, Sil!',
            cancelButtonText: 'İptal'
        }).then((result) => {
            if (result.isConfirmed) {
                $.ajax({
                    url: `/user/label-designer/${templateId}/delete`,
                    type: 'POST',
                    success: function(response) {
                        if (response.success) {
                            Swal.fire({
                                title: 'Silindi!',
                                text: response.message,
                                icon: 'success',
                                confirmButtonText: 'Tamam'
                            }).then(() => {
                                window.location.reload();
                            });
                        } else {
                            Swal.fire('Hata', response.message, 'error');
                        }
                    },
                    error: function() {
                        Swal.fire('Hata', 'Şablon silinirken bir hata oluştu', 'error');
                    }
                });
            }
        });
    });
});
</script>
{% endblock %}
