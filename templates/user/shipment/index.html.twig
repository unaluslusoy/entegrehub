{% extends 'layout/_user.html.twig' %}

{% block title %}Gönderilerim{% endblock %}

{% block content %}
<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <h1 class="page-heading d-flex text-dark fw-bold fs-3 flex-column justify-content-center my-0">
                    Gönderilerim
                </h1>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="{{ path('user_dashboard') }}" class="text-muted text-hover-primary">Anasayfa</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-400 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">Gönderiler</li>
                </ul>
            </div>
            <div class="d-flex align-items-center gap-2 gap-lg-3">
                <a href="{{ path('user_shipment_create') }}" class="btn btn-sm btn-primary">
                    <i class="ki-outline ki-plus fs-2"></i>
                    Yeni Gönderi
                </a>
            </div>
        </div>
    </div>
    <!--end::Toolbar-->

    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-xxl">

            <!--begin::Statistics-->
            <div class="row g-5 g-xl-8 mb-5">
                <div class="col-xl-3">
                    <div class="card card-flush h-xl-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div class="d-flex flex-stack">
                                <div class="text-gray-700 fw-semibold fs-6 me-2">Toplam Gönderi</div>
                            </div>
                            <div class="d-flex align-items-center pt-3">
                                <span class="fs-2hx fw-bold text-dark me-2 lh-1">{{ stats.total|default(0) }}</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3">
                    <div class="card card-flush h-xl-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div class="d-flex flex-stack">
                                <div class="text-gray-700 fw-semibold fs-6 me-2">Yolda</div>
                            </div>
                            <div class="d-flex align-items-center pt-3">
                                <span class="fs-2hx fw-bold text-primary me-2 lh-1">{{ stats.in_transit|default(0) }}</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3">
                    <div class="card card-flush h-xl-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div class="d-flex flex-stack">
                                <div class="text-gray-700 fw-semibold fs-6 me-2">Teslim Edildi</div>
                            </div>
                            <div class="d-flex align-items-center pt-3">
                                <span class="fs-2hx fw-bold text-success me-2 lh-1">{{ stats.delivered|default(0) }}</span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-xl-3">
                    <div class="card card-flush h-xl-100">
                        <div class="card-body d-flex flex-column justify-content-between">
                            <div class="d-flex flex-stack">
                                <div class="text-gray-700 fw-semibold fs-6 me-2">İptal</div>
                            </div>
                            <div class="d-flex align-items-center pt-3">
                                <span class="fs-2hx fw-bold text-danger me-2 lh-1">{{ stats.cancelled|default(0) }}</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <!--end::Statistics-->

            <!--begin::Card-->
            <div class="card">
                <!--begin::Card header-->
                <div class="card-header border-0 pt-6">
                    <div class="card-title">
                        <!--begin::Search-->
                        <div class="d-flex align-items-center position-relative my-1">
                            <i class="ki-outline ki-magnifier fs-3 position-absolute ms-5"></i>
                            <input type="text" id="search-input" class="form-control form-control-solid w-250px ps-13" placeholder="Takip no, sipariş no ara..." />
                        </div>
                        <!--end::Search-->
                    </div>

                    <div class="card-toolbar">
                        <!--begin::Toolbar-->
                        <div class="d-flex justify-content-end gap-2" data-kt-shipment-table-toolbar="base">
                            <!--begin::Filter-->
                            <button type="button" class="btn btn-light-primary" data-kt-menu-trigger="click" data-kt-menu-placement="bottom-end">
                                <i class="ki-outline ki-filter fs-2"></i>
                                Filtrele
                            </button>
                            <!--begin::Menu-->
                            <div class="menu menu-sub menu-sub-dropdown w-300px w-md-400px" data-kt-menu="true">
                                <div class="px-7 py-5">
                                    <div class="fs-5 text-dark fw-bold">Filtre Seçenekleri</div>
                                </div>
                                <div class="separator border-gray-200"></div>
                                <div class="px-7 py-5">
                                    <div class="mb-5">
                                        <label class="form-label fw-semibold">Durum:</label>
                                        <select class="form-select form-select-solid" id="filter-status" data-control="select2" data-placeholder="Durum seç" data-allow-clear="true">
                                            <option></option>
                                            <option value="created">Oluşturuldu</option>
                                            <option value="picked_up">Teslim Alındı</option>
                                            <option value="in_transit">Yolda</option>
                                            <option value="out_for_delivery">Dağıtımda</option>
                                            <option value="delivered">Teslim Edildi</option>
                                            <option value="returned">İade</option>
                                            <option value="cancelled">İptal</option>
                                        </select>
                                    </div>
                                    <div class="mb-5">
                                        <label class="form-label fw-semibold">Kargo Firması:</label>
                                        <select class="form-select form-select-solid" id="filter-cargo-company" data-control="select2" data-placeholder="Firma seç" data-allow-clear="true">
                                            <option></option>
                                            {% for company in cargo_companies %}
                                                <option value="{{ company.id }}">{{ company.name }}</option>
                                            {% endfor %}
                                        </select>
                                    </div>
                                    <div class="mb-5">
                                        <label class="form-label fw-semibold">Tarih Aralığı:</label>
                                        <div class="row g-3">
                                            <div class="col-6">
                                                <input type="date" class="form-control form-control-solid" id="filter-date-from" placeholder="Başlangıç" />
                                            </div>
                                            <div class="col-6">
                                                <input type="date" class="form-control form-control-solid" id="filter-date-to" placeholder="Bitiş" />
                                            </div>
                                        </div>
                                    </div>
                                    <div class="d-flex justify-content-end">
                                        <button type="reset" class="btn btn-light btn-active-light-primary me-2" id="filter-reset">Sıfırla</button>
                                        <button type="button" class="btn btn-primary" id="filter-apply">Uygula</button>
                                    </div>
                                </div>
                            </div>
                            <!--end::Menu-->
                            <!--end::Filter-->

                            <!--begin::Export-->
                            <button type="button" class="btn btn-light-primary" id="bulk-print-btn" style="display:none;">
                                <i class="ki-outline ki-printer fs-2"></i>
                                Toplu Yazdır (<span id="selected-count">0</span>)
                            </button>
                            <!--end::Export-->
                        </div>
                        <!--end::Toolbar-->
                    </div>
                </div>
                <!--end::Card header-->

                <!--begin::Card body-->
                <div class="card-body pt-0">
                    <!--begin::Table-->
                    <table class="table align-middle table-row-dashed fs-6 gy-5" id="shipments_table">
                        <thead>
                            <tr class="text-start text-gray-400 fw-bold fs-7 text-uppercase gs-0">
                                <th class="w-10px pe-2">
                                    <div class="form-check form-check-sm form-check-custom form-check-solid me-3">
                                        <input class="form-check-input" type="checkbox" id="select-all" />
                                    </div>
                                </th>
                                <th class="min-w-125px">Takip No</th>
                                <th class="min-w-125px">Sipariş No</th>
                                <th class="min-w-125px">Kargo Firması</th>
                                <th class="min-w-100px">Durum</th>
                                <th class="min-w-100px">Hizmet Tipi</th>
                                <th class="min-w-80px">Ağırlık</th>
                                <th class="min-w-100px">Oluşturulma</th>
                                <th class="text-end min-w-100px">İşlemler</th>
                            </tr>
                        </thead>
                        <tbody class="text-gray-600 fw-semibold">
                        </tbody>
                    </table>
                    <!--end::Table-->
                </div>
                <!--end::Card body-->
            </div>
            <!--end::Card-->
        </div>
    </div>
    <!--end::Content-->
</div>

<!--begin::Template Selection Modal-->
<div class="modal fade" id="template-modal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered mw-650px">
        <div class="modal-content">
            <div class="modal-header">
                <h2 class="fw-bold">Etiket Şablonu Seç</h2>
                <div class="btn btn-icon btn-sm btn-active-icon-primary" data-bs-dismiss="modal">
                    <i class="ki-outline ki-cross fs-1"></i>
                </div>
            </div>
            <div class="modal-body scroll-y mx-5 mx-xl-15 my-7">
                <div class="mb-10">
                    <label class="form-label fw-semibold">Etiket Şablonu:</label>
                    <select class="form-select form-select-solid" id="template-select">
                        <option value="default">Varsayılan Şablon (10x15cm)</option>
                        {% if label_templates is not empty %}
                            <optgroup label="Özel Şablonlarım">
                                {% for template in label_templates %}
                                    <option value="{{ template.id }}" {% if template.isDefault %}selected{% endif %}>
                                        {{ template.name }} ({{ template.width }}x{{ template.height }}mm)
                                        {% if template.isDefault %} - Varsayılan{% endif %}
                                    </option>
                                {% endfor %}
                            </optgroup>
                        {% endif %}
                    </select>
                    <div class="form-text">
                        Etiket yazdırılırken kullanılacak şablonu seçin
                    </div>
                </div>

                {% if label_templates is empty %}
                    <div class="notice d-flex bg-light-primary rounded border-primary border border-dashed p-6">
                        <i class="ki-outline ki-information-5 fs-2tx text-primary me-4"></i>
                        <div class="d-flex flex-stack flex-grow-1">
                            <div class="fw-semibold">
                                <h4 class="text-gray-900 fw-bold">Kendi Şablonunuzu Oluşturun</h4>
                                <div class="fs-6 text-gray-700">
                                    Etiket Tasarımcısı ile özel etiket şablonları oluşturabilirsiniz.
                                    <a href="{{ path('user_label_designer') }}" class="fw-bold">Şimdi oluştur</a>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-light" data-bs-dismiss="modal">İptal</button>
                <button type="button" class="btn btn-primary" id="confirm-print-btn">
                    <i class="ki-outline ki-printer fs-2"></i>
                    Yazdır
                </button>
            </div>
        </div>
    </div>
</div>
<!--end::Template Selection Modal-->
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
"use strict";

// DataTable instance
let table;
let selectedShipments = new Set();

// Initialize
$(document).ready(function() {
    initDataTable();
    initEventListeners();
});

function initDataTable() {
    table = $('#shipments_table').DataTable({
        processing: true,
        serverSide: true,
        ajax: {
            url: '{{ path('user_shipments_datatable') }}',
            type: 'GET',
            data: function(d) {
                d.status = $('#filter-status').val();
                d.cargo_company = $('#filter-cargo-company').val();
                d.date_from = $('#filter-date-from').val();
                d.date_to = $('#filter-date-to').val();
                d.search = { value: $('#search-input').val() };
            }
        },
        columns: [
            {
                data: 'id',
                orderable: false,
                searchable: false,
                render: function(data) {
                    return `<div class="form-check form-check-sm form-check-custom form-check-solid">
                        <input class="form-check-input shipment-checkbox" type="checkbox" value="${data}" />
                    </div>`;
                }
            },
            {
                data: 'tracking_number',
                render: function(data, type, row) {
                    return `<a href="/user/shipments/${row.id}" class="text-dark fw-bold text-hover-primary">${data}</a>`;
                }
            },
            {
                data: 'order_number',
                render: function(data) {
                    return `<span class="badge badge-light-info">#${data}</span>`;
                }
            },
            { data: 'cargo_company' },
            {
                data: 'status',
                render: function(data) {
                    const statusMap = {
                        'created': { badge: 'light', text: 'Oluşturuldu' },
                        'picked_up': { badge: 'light-info', text: 'Teslim Alındı' },
                        'in_transit': { badge: 'light-primary', text: 'Yolda' },
                        'out_for_delivery': { badge: 'light-warning', text: 'Dağıtımda' },
                        'delivered': { badge: 'light-success', text: 'Teslim Edildi' },
                        'returned': { badge: 'light-danger', text: 'İade' },
                        'cancelled': { badge: 'light-dark', text: 'İptal' }
                    };
                    const status = statusMap[data] || { badge: 'light', text: data };
                    return `<span class="badge badge-${status.badge}">${status.text}</span>`;
                }
            },
            {
                data: 'service_type',
                render: function(data) {
                    return data === 'express' ? '<span class="badge badge-warning">Ekspres</span>' :
                           data === 'standard' ? '<span class="badge badge-secondary">Standart</span>' :
                           '<span class="badge badge-light">-</span>';
                }
            },
            {
                data: 'weight',
                render: function(data) {
                    return data ? `${data} kg` : '-';
                }
            },
            {
                data: 'created_at',
                render: function(data) {
                    return moment(data).format('DD.MM.YYYY HH:mm');
                }
            },
            {
                data: null,
                orderable: false,
                searchable: false,
                className: 'text-end',
                render: function(data, type, row) {
                    return `
                        <div class="d-flex justify-content-end gap-2">
                            <a href="/user/shipments/${row.id}" class="btn btn-sm btn-light-primary" title="Detay">
                                <i class="ki-outline ki-eye fs-5"></i>
                            </a>
                            <a href="/user/shipments/${row.id}/label" class="btn btn-sm btn-light-info" title="Etiket Yazdır" target="_blank">
                                <i class="ki-outline ki-printer fs-5"></i>
                            </a>
                            <button class="btn btn-sm btn-light-success btn-track" data-id="${row.id}" title="Kargo Takip">
                                <i class="ki-outline ki-geolocation fs-5"></i>
                            </button>
                        </div>
                    `;
                }
            }
        ],
        order: [[7, 'desc']], // Order by created_at descending
        pageLength: 25,
        lengthMenu: [[10, 25, 50, 100], [10, 25, 50, 100]],
        language: {
            url: '/assets/plugins/datatables/lang/tr.json'
        },
        drawCallback: function() {
            // Restore checkbox states
            $('.shipment-checkbox').each(function() {
                const id = $(this).val();
                if (selectedShipments.has(id)) {
                    $(this).prop('checked', true);
                }
            });
        }
    });
}

function initEventListeners() {
    // Search input
    $('#search-input').on('keyup', debounce(function() {
        table.ajax.reload();
    }, 500));

    // Filter apply
    $('#filter-apply').on('click', function() {
        table.ajax.reload();
        // Close menu
        $('[data-kt-menu-trigger]').trigger('click');
    });

    // Filter reset
    $('#filter-reset').on('click', function() {
        $('#filter-status').val('').trigger('change');
        $('#filter-cargo-company').val('').trigger('change');
        $('#filter-date-from').val('');
        $('#filter-date-to').val('');
        table.ajax.reload();
    });

    // Select all checkbox
    $('#select-all').on('change', function() {
        const isChecked = $(this).is(':checked');
        $('.shipment-checkbox').prop('checked', isChecked).trigger('change');
    });

    // Individual checkbox
    $(document).on('change', '.shipment-checkbox', function() {
        const id = $(this).val();
        if ($(this).is(':checked')) {
            selectedShipments.add(id);
        } else {
            selectedShipments.delete(id);
        }
        updateBulkActions();
    });

    // Bulk print
    $('#bulk-print-btn').on('click', function() {
        if (selectedShipments.size === 0) {
            Swal.fire({
                icon: 'warning',
                title: 'Uyarı',
                text: 'Lütfen gönderi seçin.'
            });
            return;
        }

        // Show template selection modal
        $('#template-modal').modal('show');
    });

    // Confirm print with selected template
    $('#confirm-print-btn').on('click', function() {
        const templateValue = $('#template-select').val();
        const shipmentIds = Array.from(selectedShipments).join(',');

        let printUrl = `/user/shipments/labels/bulk-print?ids=${shipmentIds}`;

        // Add template parameter if not default
        if (templateValue && templateValue !== 'default') {
            printUrl += `&template=${templateValue}`;
        }

        // Close modal
        $('#template-modal').modal('hide');

        // Open print in new tab
        window.open(printUrl, '_blank');

        // Show success message
        toastr.success(`${selectedShipments.size} adet etiket hazırlandı.`);
    });

    // Track shipment
    $(document).on('click', '.btn-track', function() {
        const shipmentId = $(this).data('id');
        trackShipment(shipmentId);
    });
}

function updateBulkActions() {
    const count = selectedShipments.size;
    $('#selected-count').text(count);
    $('#bulk-print-btn').toggle(count > 0);
}

function trackShipment(shipmentId) {
    $.ajax({
        url: `/user/shipments/${shipmentId}/track`,
        type: 'POST',
        success: function(response) {
            if (response.success) {
                Swal.fire({
                    icon: 'success',
                    title: 'Başarılı',
                    text: response.message
                });
                table.ajax.reload(null, false);
            }
        },
        error: function() {
            Swal.fire({
                icon: 'error',
                title: 'Hata',
                text: 'Kargo takip bilgileri güncellenirken hata oluştu.'
            });
        }
    });
}

function debounce(func, wait) {
    let timeout;
    return function executedFunction(...args) {
        const later = () => {
            clearTimeout(timeout);
            func(...args);
        };
        clearTimeout(timeout);
        timeout = setTimeout(later, wait);
    };
}
</script>
{% endblock %}
