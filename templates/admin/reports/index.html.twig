{% extends 'layout/_admin.html.twig' %}

{% block title %}Raporlar{% endblock %}

{% block page_title %}Raporlar{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-500 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">Raporlar</li>
{% endblock %}

{% block content %}
    <div class="row g-5 g-xl-10">
        {# Orders Report Card #}
        <div class="col-md-6 col-xl-4">
            <div class="card card-flush h-100">
                <div class="card-header pt-7">
                    <h3 class="card-title align-items-start flex-column">
                        <span class="card-label fw-bold text-gray-800">Sipariş Raporları</span>
                        <span class="text-gray-500 mt-1 fw-semibold fs-6">Sipariş analizleri ve istatistikler</span>
                    </h3>
                </div>
                <div class="card-body pt-5">
                    <div class="mb-5">
                        <i class="ki-duotone ki-basket fs-3x text-primary mb-3">
                            <span class="path1"></span>
                            <span class="path2"></span>
                            <span class="path3"></span>
                            <span class="path4"></span>
                        </i>
                    </div>
                    <div class="text-gray-700 fs-6 mb-5">
                        • Sipariş sayısı ve gelir analizi<br>
                        • Durum bazlı dağılım<br>
                        • Aylık sipariş trendi<br>
                        • Ödeme yöntemi analizi
                    </div>
                    <a href="{{ path('admin_reports_orders') }}" class="btn btn-light-primary w-100">
                        Raporu Görüntüle
                    </a>
                </div>
            </div>
        </div>

        {# Shipments Report Card #}
        <div class="col-md-6 col-xl-4">
            <div class="card card-flush h-100">
                <div class="card-header pt-7">
                    <h3 class="card-title align-items-start flex-column">
                        <span class="card-label fw-bold text-gray-800">Gönderi Raporları</span>
                        <span class="text-gray-500 mt-1 fw-semibold fs-6">Kargo gönderim analizi</span>
                    </h3>
                </div>
                <div class="card-body pt-5">
                    <div class="mb-5">
                        <i class="ki-duotone ki-package fs-3x text-success mb-3">
                            <span class="path1"></span>
                            <span class="path2"></span>
                            <span class="path3"></span>
                        </i>
                    </div>
                    <div class="text-gray-700 fs-6 mb-5">
                        • Toplam gönderi sayısı<br>
                        • Teslimat başarı oranı<br>
                        • Kargo maliyeti analizi<br>
                        • Aylık gönderi trendi
                    </div>
                    <a href="{{ path('admin_reports_shipments') }}" class="btn btn-light-success w-100">
                        Raporu Görüntüle
                    </a>
                </div>
            </div>
        </div>

        {# Cargo Performance Report Card #}
        <div class="col-md-6 col-xl-4">
            <div class="card card-flush h-100">
                <div class="card-header pt-7">
                    <h3 class="card-title align-items-start flex-column">
                        <span class="card-label fw-bold text-gray-800">Kargo Performans</span>
                        <span class="text-gray-500 mt-1 fw-semibold fs-6">Kargo firması karşılaştırması</span>
                    </h3>
                </div>
                <div class="card-body pt-5">
                    <div class="mb-5">
                        <i class="ki-duotone ki-delivery fs-3x text-info mb-3">
                            <span class="path1"></span>
                            <span class="path2"></span>
                            <span class="path3"></span>
                            <span class="path4"></span>
                            <span class="path5"></span>
                        </i>
                    </div>
                    <div class="text-gray-700 fs-6 mb-5">
                        • Firma bazlı gönderi sayısı<br>
                        • Teslimat başarı oranı<br>
                        • Ortalama teslimat süresi<br>
                        • Maliyet karşılaştırması
                    </div>
                    <a href="{{ path('admin_reports_cargo_performance') }}" class="btn btn-light-info w-100">
                        Raporu Görüntüle
                    </a>
                </div>
            </div>
        </div>

        {# Financial Report Card #}
        <div class="col-md-6 col-xl-4">
            <div class="card card-flush h-100">
                <div class="card-header pt-7">
                    <h3 class="card-title align-items-start flex-column">
                        <span class="card-label fw-bold text-gray-800">Finansal Raporlar</span>
                        <span class="text-gray-500 mt-1 fw-semibold fs-6">Gelir ve maliyet analizi</span>
                    </h3>
                </div>
                <div class="card-body pt-5">
                    <div class="mb-5">
                        <i class="ki-duotone ki-dollar fs-3x text-warning mb-3">
                            <span class="path1"></span>
                            <span class="path2"></span>
                            <span class="path3"></span>
                        </i>
                    </div>
                    <div class="text-gray-700 fs-6 mb-5">
                        • Toplam gelir<br>
                        • Kargo maliyetleri<br>
                        • Net gelir hesaplama<br>
                        • Ödeme yöntemi dağılımı
                    </div>
                    <a href="{{ path('admin_reports_financial') }}" class="btn btn-light-warning w-100">
                        Raporu Görüntüle
                    </a>
                </div>
            </div>
        </div>

        {# Custom Reports Card #}
        <div class="col-md-6 col-xl-4">
            <div class="card card-flush h-100">
                <div class="card-header pt-7">
                    <h3 class="card-title align-items-start flex-column">
                        <span class="card-label fw-bold text-gray-800">Özel Raporlar</span>
                        <span class="text-gray-500 mt-1 fw-semibold fs-6">Özelleştirilmiş analiz</span>
                    </h3>
                </div>
                <div class="card-body pt-5">
                    <div class="mb-5">
                        <i class="ki-duotone ki-chart-simple fs-3x text-danger mb-3">
                            <span class="path1"></span>
                            <span class="path2"></span>
                            <span class="path3"></span>
                            <span class="path4"></span>
                        </i>
                    </div>
                    <div class="text-gray-700 fs-6 mb-5">
                        • Tarih aralığına göre rapor<br>
                        • Mağaza bazlı analiz<br>
                        • Bölgesel dağılım<br>
                        • Ürün bazlı satış
                    </div>
                    <button class="btn btn-light-danger w-100" disabled>
                        Yakında
                    </button>
                </div>
            </div>
        </div>

        {# Export Tools Card #}
        <div class="col-md-6 col-xl-4">
            <div class="card card-flush h-100 bg-light-primary">
                <div class="card-header pt-7">
                    <h3 class="card-title align-items-start flex-column">
                        <span class="card-label fw-bold text-gray-800">Export Araçları</span>
                        <span class="text-gray-500 mt-1 fw-semibold fs-6">Veri dışa aktarma</span>
                    </h3>
                </div>
                <div class="card-body pt-5">
                    <div class="mb-5">
                        <i class="ki-duotone ki-file-down fs-3x text-primary mb-3">
                            <span class="path1"></span>
                            <span class="path2"></span>
                        </i>
                    </div>
                    <div class="text-gray-700 fs-6 mb-5">
                        Tüm raporları farklı formatlarda dışa aktarabilirsiniz:
                    </div>
                    <div class="d-flex gap-2">
                        <span class="badge badge-primary">CSV</span>
                        <span class="badge badge-light-primary">Excel</span>
                        <span class="badge badge-light-primary">PDF</span>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
