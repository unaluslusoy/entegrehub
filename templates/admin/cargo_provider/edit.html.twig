{% extends 'layout/_admin.html.twig' %}

{% block title %}Kargo Firması Düzenle - {{ provider.name }}{% endblock %}

{% block page_title %}Kargo Firması Düzenle{% endblock %}

{% block content %}
    <div class="container-xxl">
        <form method="POST" action="{{ path('admin_cargo_providers_edit', {id: provider.id}) }}" enctype="multipart/form-data">
            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">{{ provider.name }} - Düzenle</h3>
                </div>
                <div class="card-body">
                    <!--begin::Row-->
                    <div class="row mb-7">
                        <label class="col-lg-3 fw-semibold text-muted">
                            Firma Adı
                            <span class="text-danger">*</span>
                        </label>
                        <div class="col-lg-9">
                            <input type="text" name="name" class="form-control form-control-lg form-control-solid" value="{{ provider.name }}" required />
                        </div>
                    </div>
                    <!--end::Row-->

                    <!--begin::Row-->
                    <div class="row mb-7">
                        <label class="col-lg-3 fw-semibold text-muted">
                            Kod (Slug)
                            <span class="text-danger">*</span>
                        </label>
                        <div class="col-lg-9">
                            <input type="text" name="code" class="form-control form-control-lg form-control-solid" value="{{ provider.code }}" required />
                            <div class="form-text">Benzersiz kod (lowercase, tire kullanılabilir)</div>
                        </div>
                    </div>
                    <!--end::Row-->

                    <!--begin::Row-->
                    <div class="row mb-7">
                        <label class="col-lg-3 fw-semibold text-muted">Açıklama</label>
                        <div class="col-lg-9">
                            <textarea name="description" class="form-control form-control-lg form-control-solid" rows="3">{{ provider.description }}</textarea>
                        </div>
                    </div>
                    <!--end::Row-->

                    <!--begin::Row-->
                    <div class="row mb-7">
                        <label class="col-lg-3 fw-semibold text-muted">Logo</label>
                        <div class="col-lg-9">
                            {% if provider.logo %}
                            <div class="mb-3">
                                <img src="{{ provider.logo }}" alt="{{ provider.name }}" style="max-width: 150px; max-height: 150px;" class="rounded" />
                            </div>
                            {% endif %}
                            <input type="file" name="logo" class="form-control form-control-lg form-control-solid" accept="image/*" />
                            <div class="form-text">Yeni logo yüklemek için dosya seçin (mevcut logo silinecek)</div>
                        </div>
                    </div>
                    <!--end::Row-->

                    <!--begin::Row-->
                    <div class="row mb-7">
                        <label class="col-lg-3 fw-semibold text-muted">API Endpoint</label>
                        <div class="col-lg-9">
                            <input type="url" name="api_endpoint" class="form-control form-control-lg form-control-solid" value="{{ provider.apiEndpoint }}" />
                            <div class="form-text">Base API URL</div>
                        </div>
                    </div>
                    <!--end::Row-->

                    <!--begin::Row-->
                    <div class="row mb-7">
                        <label class="col-lg-3 fw-semibold text-muted">Webhook URL</label>
                        <div class="col-lg-9">
                            <input type="url" name="webhook_url" class="form-control form-control-lg form-control-solid" value="{{ provider.webhookUrl }}" />
                            <div class="form-text">Webhook callback URL</div>
                        </div>
                    </div>
                    <!--end::Row-->

                    <!--begin::Row-->
                    <div class="row mb-7">
                        <label class="col-lg-3 fw-semibold text-muted">API Dokümantasyon</label>
                        <div class="col-lg-9">
                            <input type="url" name="api_documentation_url" class="form-control form-control-lg form-control-solid" value="{{ provider.apiDocumentationUrl }}" />
                        </div>
                    </div>
                    <!--end::Row-->

                    <!--begin::Row-->
                    <div class="row mb-7">
                        <label class="col-lg-3 fw-semibold text-muted">Öncelik</label>
                        <div class="col-lg-9">
                            <input type="number" name="priority" class="form-control form-control-lg form-control-solid" value="{{ provider.priority }}" />
                            <div class="form-text">Yüksek değer = öncelikli gösterim</div>
                        </div>
                    </div>
                    <!--end::Row-->

                    <!--begin::Row-->
                    <div class="row mb-7">
                        <label class="col-lg-3 fw-semibold text-muted">Config Fields (JSON)</label>
                        <div class="col-lg-9">
                            <textarea name="config_fields" id="config_fields" class="form-control form-control-lg form-control-solid font-monospace" rows="10">{{ provider.configFields|json_encode(constant('JSON_PRETTY_PRINT')) }}</textarea>
                            <div class="form-text">
                                Kullanıcıların dolduracağı form alanları (JSON array)
                            </div>
                        </div>
                    </div>
                    <!--end::Row-->

                    <!--begin::Row-->
                    <div class="row mb-7">
                        <label class="col-lg-3 fw-semibold text-muted">Kullanıcı Entegrasyonları</label>
                        <div class="col-lg-9">
                            <div class="badge badge-light-info fs-5">
                                {{ provider.userConfigs|length }} kullanıcı bu kargo firmasını kullanıyor
                            </div>
                        </div>
                    </div>
                    <!--end::Row-->

                    <!--begin::Row-->
                    <div class="row mb-7">
                        <label class="col-lg-3 fw-semibold text-muted"></label>
                        <div class="col-lg-9">
                            <div class="form-check form-check-custom form-check-solid mb-3">
                                <input class="form-check-input" type="checkbox" name="is_active" id="is_active" value="1" {{ provider.isActive ? 'checked' : '' }} />
                                <label class="form-check-label" for="is_active">
                                    Aktif (Kullanıcılara göster)
                                </label>
                            </div>
                            <div class="form-check form-check-custom form-check-solid">
                                <input class="form-check-input" type="checkbox" name="test_mode_available" id="test_mode_available" value="1" {{ provider.isTestModeAvailable ? 'checked' : '' }} />
                                <label class="form-check-label" for="test_mode_available">
                                    Test Modu Destekliyor
                                </label>
                            </div>
                        </div>
                    </div>
                    <!--end::Row-->
                </div>
                <div class="card-footer d-flex justify-content-between">
                    <a href="{{ path('admin_cargo_providers') }}" class="btn btn-light">
                        <i class="ki-duotone ki-left fs-2"></i>
                        Geri
                    </a>
                    <button type="submit" class="btn btn-primary">
                        <i class="ki-duotone ki-check fs-2"></i>
                        Güncelle
                    </button>
                </div>
            </div>
        </form>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        // JSON formatter helper
        document.getElementById('config_fields').addEventListener('blur', function() {
            try {
                const json = JSON.parse(this.value);
                this.value = JSON.stringify(json, null, 2);
                this.classList.remove('is-invalid');
            } catch (e) {
                if (this.value.trim() !== '') {
                    this.classList.add('is-invalid');
                }
            }
        });
    </script>
{% endblock %}
