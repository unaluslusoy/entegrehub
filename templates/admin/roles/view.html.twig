{% extends 'layout/base.html.twig' %}

{% block title %}{{ role.name }} | Roller | {{ parent() }}{% endblock %}

{% block content %}
<div class="d-flex flex-column flex-column-fluid">
    <!--begin::Toolbar-->
    <div id="kt_app_toolbar" class="app-toolbar py-3 py-lg-6">
        <div id="kt_app_toolbar_container" class="app-container container-xxl d-flex flex-stack">
            <div class="page-title d-flex flex-column justify-content-center flex-wrap me-3">
                <h1 class="page-heading d-flex text-gray-900 fw-bold fs-3 flex-column justify-content-center my-0">{{ role.name }}</h1>
                <ul class="breadcrumb breadcrumb-separatorless fw-semibold fs-7 my-0 pt-1">
                    <li class="breadcrumb-item text-muted">
                        <a href="{{ path('admin_dashboard') }}" class="text-muted text-hover-primary">Dashboard</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-500 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">
                        <a href="{{ path('admin_roles_index') }}" class="text-muted text-hover-primary">Roller</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span class="bullet bg-gray-500 w-5px h-2px"></span>
                    </li>
                    <li class="breadcrumb-item text-muted">{{ role.name }}</li>
                </ul>
            </div>
            <div class="d-flex align-items-center gap-2 gap-lg-3">
                {% if not role.isSystem %}
                <a href="{{ path('admin_roles_edit', {id: role.id}) }}" class="btn btn-sm fw-bold btn-primary">
                    <i class="ki-duotone ki-pencil fs-2"><span class="path1"></span><span class="path2"></span></i>Düzenle
                </a>
                {% endif %}
            </div>
        </div>
    </div>
    <!--end::Toolbar-->

    <!--begin::Content-->
    <div id="kt_app_content" class="app-content flex-column-fluid">
        <div id="kt_app_content_container" class="app-container container-xxl">
            <div class="row g-6 g-xl-9">
                <!--begin::Col-->
                <div class="col-lg-4">
                    <!--begin::Summary-->
                    <div class="card card-flush h-lg-100">
                        <div class="card-header mt-6">
                            <div class="card-title flex-column">
                                <h3 class="fw-bold mb-1">Rol Bilgileri</h3>
                            </div>
                        </div>
                        <div class="card-body pt-0 fs-6">
                            <div class="d-flex flex-stack mb-5">
                                <div class="fw-semibold pe-2">Rol Adı:</div>
                                <div class="text-gray-600 fw-bold">{{ role.name }}</div>
                            </div>
                            <div class="d-flex flex-stack mb-5">
                                <div class="fw-semibold pe-2">Slug:</div>
                                <div class="text-gray-600 fw-bold">
                                    <span class="badge badge-light-info">{{ role.slug }}</span>
                                </div>
                            </div>
                            <div class="d-flex flex-stack mb-5">
                                <div class="fw-semibold pe-2">Seviye:</div>
                                <div class="text-gray-600 fw-bold">
                                    <span class="badge badge-light-primary">{{ role.level }}</span>
                                </div>
                            </div>
                            <div class="d-flex flex-stack mb-5">
                                <div class="fw-semibold pe-2">Durum:</div>
                                <div class="text-gray-600 fw-bold">
                                    {% if role.isSystem %}
                                    <span class="badge badge-warning">Sistem Rolü</span>
                                    {% else %}
                                    <span class="badge badge-success">Düzenlenebilir</span>
                                    {% endif %}
                                </div>
                            </div>
                            <div class="d-flex flex-stack mb-5">
                                <div class="fw-semibold pe-2">Kullanıcı Sayısı:</div>
                                <div class="text-gray-600 fw-bold">{{ users|length }}</div>
                            </div>
                            <div class="d-flex flex-stack mb-5">
                                <div class="fw-semibold pe-2">İzin Sayısı:</div>
                                <div class="text-gray-600 fw-bold">{{ permissions|length }}</div>
                            </div>
                            <div class="d-flex flex-stack mb-5">
                                <div class="fw-semibold pe-2">Oluşturma:</div>
                                <div class="text-gray-600 fw-bold">{{ role.createdAt|date('d.m.Y H:i') }}</div>
                            </div>
                            <div class="d-flex flex-stack">
                                <div class="fw-semibold pe-2">Güncelleme:</div>
                                <div class="text-gray-600 fw-bold">{{ role.updatedAt|date('d.m.Y H:i') }}</div>
                            </div>
                        </div>
                    </div>
                    <!--end::Summary-->
                </div>
                <!--end::Col-->

                <!--begin::Col-->
                <div class="col-lg-8">
                    <!--begin::Tab Content-->
                    <div class="card card-flush h-lg-100">
                        <!--begin::Card header-->
                        <div class="card-header">
                            <ul class="nav nav-stretch nav-line-tabs nav-line-tabs-2x border-transparent fs-5 fw-bold">
                                <li class="nav-item">
                                    <a class="nav-link text-active-primary active" data-bs-toggle="tab" href="#kt_role_view_permissions">İzinler</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-active-primary" data-bs-toggle="tab" href="#kt_role_view_users">Kullanıcılar</a>
                                </li>
                            </ul>
                        </div>
                        <!--end::Card header-->

                        <!--begin::Card body-->
                        <div class="card-body pt-0">
                            <div class="tab-content">
                                <!--begin::Tab pane-->
                                <div class="tab-pane fade show active" id="kt_role_view_permissions" role="tabpanel">
                                    {% if permissions|length > 0 %}
                                    <div class="table-responsive">
                                        <table class="table table-row-dashed table-row-gray-300 align-middle gs-0 gy-4">
                                            <thead>
                                                <tr class="fw-bold text-muted">
                                                    <th class="min-w-250px">İzin</th>
                                                    <th class="min-w-150px">Modül</th>
                                                    <th class="min-w-200px">Açıklama</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for permission in permissions %}
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <i class="ki-duotone ki-check-circle fs-2 text-success me-3">
                                                                <span class="path1"></span>
                                                                <span class="path2"></span>
                                                            </i>
                                                            <span class="fw-bold">{{ permission.name }}</span>
                                                        </div>
                                                    </td>
                                                    <td>
                                                        <span class="badge badge-light-primary">{{ permission.module }}</span>
                                                    </td>
                                                    <td class="text-muted">{{ permission.description ?? '-' }}</td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                    {% else %}
                                    <div class="text-center py-10">
                                        <i class="ki-duotone ki-information-5 fs-5x text-muted mb-5">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                            <span class="path3"></span>
                                        </i>
                                        <p class="text-muted fs-5">Bu role henüz izin atanmamış</p>
                                    </div>
                                    {% endif %}
                                </div>
                                <!--end::Tab pane-->

                                <!--begin::Tab pane-->
                                <div class="tab-pane fade" id="kt_role_view_users" role="tabpanel">
                                    {% if users|length > 0 %}
                                    <div class="table-responsive">
                                        <table class="table table-row-dashed table-row-gray-300 align-middle gs-0 gy-4">
                                            <thead>
                                                <tr class="fw-bold text-muted">
                                                    <th class="min-w-250px">Kullanıcı</th>
                                                    <th class="min-w-150px">E-posta</th>
                                                    <th class="min-w-100px">Durum</th>
                                                    <th class="min-w-100px text-end">İşlemler</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                {% for user in users %}
                                                <tr>
                                                    <td>
                                                        <div class="d-flex align-items-center">
                                                            <div class="symbol symbol-40px me-3">
                                                                <div class="symbol-label bg-light-primary text-primary fw-bold">
                                                                    {{ user.firstName|slice(0, 1)|upper }}{{ user.lastName|slice(0, 1)|upper }}
                                                                </div>
                                                            </div>
                                                            <div class="d-flex flex-column">
                                                                <span class="fw-bold">{{ user.fullName }}</span>
                                                            </div>
                                                        </div>
                                                    </td>
                                                    <td>{{ user.email }}</td>
                                                    <td>
                                                        {% if user.isActive %}
                                                        <span class="badge badge-light-success">Aktif</span>
                                                        {% else %}
                                                        <span class="badge badge-light-danger">Pasif</span>
                                                        {% endif %}
                                                    </td>
                                                    <td class="text-end">
                                                        <a href="{{ path('admin_users_view', {id: user.id}) }}" class="btn btn-sm btn-light-primary">
                                                            Görüntüle
                                                        </a>
                                                    </td>
                                                </tr>
                                                {% endfor %}
                                            </tbody>
                                        </table>
                                    </div>
                                    {% else %}
                                    <div class="text-center py-10">
                                        <i class="ki-duotone ki-user fs-5x text-muted mb-5">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                        </i>
                                        <p class="text-muted fs-5">Bu role henüz kullanıcı atanmamış</p>
                                    </div>
                                    {% endif %}
                                </div>
                                <!--end::Tab pane-->
                            </div>
                        </div>
                        <!--end::Card body-->
                    </div>
                    <!--end::Tab Content-->
                </div>
                <!--end::Col-->
            </div>

            {% if role.description %}
            <div class="row g-6 g-xl-9 mt-6">
                <div class="col-12">
                    <div class="card">
                        <div class="card-header">
                            <h3 class="card-title">Açıklama</h3>
                        </div>
                        <div class="card-body">
                            <p class="text-gray-600">{{ role.description }}</p>
                        </div>
                    </div>
                </div>
            </div>
            {% endif %}
        </div>
    </div>
    <!--end::Content-->
</div>
{% endblock %}
