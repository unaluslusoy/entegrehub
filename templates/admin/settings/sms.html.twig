{% extends 'layout/_admin.html.twig' %}

{% block title %}SMS Ayarları{% endblock %}

{% block page_title %}SMS Ayarları{% endblock %}

{% block breadcrumb %}
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-500 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">Ayarlar</li>
    <li class="breadcrumb-item">
        <span class="bullet bg-gray-500 w-5px h-2px"></span>
    </li>
    <li class="breadcrumb-item text-muted">SMS</li>
{% endblock %}

{% block content %}
    <form method="post">
        <div class="row g-5">
            <div class="col-xl-9">
                <div class="card mb-5">
                    <div class="card-header">
                        <h3 class="card-title">SMS Sağlayıcı Ayarları</h3>
                    </div>
                    <div class="card-body">
                        <div class="mb-5">
                            <div class="form-check form-switch form-check-custom form-check-solid mb-3">
                                <input class="form-check-input" type="checkbox" name="sms_enabled" value="1" 
                                       id="sms-enabled" {{ settings.sms_enabled ?? false ? 'checked' : '' }} />
                                <label class="form-check-label" for="sms-enabled">
                                    SMS Bildirimlerini Etkinleştir
                                </label>
                            </div>
                        </div>

                        <div class="mb-5">
                            <label class="form-label">SMS Sağlayıcı</label>
                            <select name="sms_provider" class="form-select">
                                <option value="">Seçiniz...</option>
                                <option value="netgsm" {{ settings.sms_provider == 'netgsm' ? 'selected' : '' }}>NetGSM</option>
                                <option value="iletimerkezi" {{ settings.sms_provider == 'iletimerkezi' ? 'selected' : '' }}>İletimerkezi</option>
                                <option value="mutlucell" {{ settings.sms_provider == 'mutlucell' ? 'selected' : '' }}>Mutlucell</option>
                                <option value="twilio" {{ settings.sms_provider == 'twilio' ? 'selected' : '' }}>Twilio</option>
                            </select>
                        </div>

                        <div class="row mb-5">
                            <div class="col-md-6">
                                <label class="form-label">API Key</label>
                                <input type="text" name="sms_api_key" class="form-control" 
                                       value="{{ settings.sms_api_key ?? '' }}" />
                            </div>
                            <div class="col-md-6">
                                <label class="form-label">API Secret</label>
                                <input type="password" name="sms_api_secret" class="form-control" 
                                       placeholder="Değiştirmek için yeni secret girin" />
                                {% if settings.sms_api_secret %}
                                <div class="form-text text-success">
                                    <i class="ki-duotone ki-check-circle fs-6"></i>
                                    Secret ayarlanmış
                                </div>
                                {% endif %}
                            </div>
                        </div>

                        <div class="mb-5">
                            <label class="form-label">Gönderen Adı</label>
                            <input type="text" name="sms_sender" class="form-control" 
                                   value="{{ settings.sms_sender ?? '' }}" placeholder="KARGO" />
                            <div class="form-text">SMS'lerde görünecek gönderen adı (Max 11 karakter)</div>
                        </div>
                    </div>
                </div>

                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">SMS Şablonları</h3>
                    </div>
                    <div class="card-body">
                        <div class="notice bg-light-info rounded border-info border border-dashed p-6">
                            <div class="d-flex flex-stack">
                                <div class="d-flex align-items-center">
                                    <i class="ki-duotone ki-information-5 fs-2tx text-info me-4">
                                        <span class="path1"></span>
                                        <span class="path2"></span>
                                        <span class="path3"></span>
                                    </i>
                                    <div class="flex-grow-1">
                                        <h6 class="mb-1">SMS Şablonları</h6>
                                        <div class="fs-7 text-gray-700">
                                            Sipariş durumu değişikliklerinde gönderilecek SMS metinleri
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-xl-3">
                <div class="card card-flush">
                    <div class="card-body">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="ki-duotone ki-check fs-2"></i>
                            Ayarları Kaydet
                        </button>
                    </div>
                </div>

                <div class="card card-flush mt-5">
                    <div class="card-body">
                        <h6 class="mb-3">Kullanılabilir Değişkenler</h6>
                        <div class="fs-7 text-gray-600">
                            <code>{customer_name}</code><br>
                            <code>{order_number}</code><br>
                            <code>{tracking_number}</code><br>
                            <code>{cargo_company}</code><br>
                            <code>{status}</code>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </form>
{% endblock %}
