{% extends 'layout/_admin.html.twig' %}

{% block title %}Müşteriler{% endblock %}

{% block toolbar %}
    <div class="d-flex align-items-center gap-2 gap-lg-3">
        <a href="{{ path('admin_customers_create') }}" class="btn btn-sm btn-primary">
            <i class="ki-duotone ki-plus fs-2">
                <span class="path1"></span>
                <span class="path2"></span>
            </i>
            Yeni Müşteri
        </a>
    </div>
{% endblock %}

{% block content %}
    <!--begin::Stats Row-->
    <div class="row g-5 g-xl-10 mb-5 mb-xl-10">
        <div class="col-md-4">
            <div class="card card-flush h-md-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="fs-6 text-gray-500 fw-semibold mb-2">Toplam Müşteri</div>
                    <div class="fs-2hx fw-bold text-gray-900 lh-1">{{ stats.total|default(0) }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-flush h-md-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="fs-6 text-gray-500 fw-semibold mb-2">Aktif Müşteri</div>
                    <div class="fs-2hx fw-bold text-success lh-1">{{ stats.active|default(0) }}</div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card card-flush h-md-100">
                <div class="card-body d-flex flex-column justify-content-between">
                    <div class="fs-6 text-gray-500 fw-semibold mb-2">Aboneliği Olanlar</div>
                    <div class="fs-2hx fw-bold text-primary lh-1">{{ stats.with_subscription|default(0) }}</div>
                </div>
            </div>
        </div>
    </div>
    <!--end::Stats Row-->

    <!--begin::Card-->
    <div class="card">
        <div class="card-header border-0 pt-6">
            <div class="card-title">
                <div class="d-flex align-items-center position-relative my-1">
                    <i class="ki-duotone ki-magnifier fs-3 position-absolute ms-5">
                        <span class="path1"></span>
                        <span class="path2"></span>
                    </i>
                    <input type="text" 
                           class="form-control form-control-solid w-250px ps-13" 
                           placeholder="Müşteri ara..." 
                           data-kt-customer-table-filter="search" />
                </div>
            </div>
        </div>
        <div class="card-body pt-0">
            <div class="table-responsive">
                <table class="table align-middle table-row-dashed fs-6 gy-5" id="kt_customers_table">
                    <thead>
                        <tr class="text-start text-gray-500 fw-bold fs-7 text-uppercase gs-0">
                            <th>#</th>
                            <th>Firma</th>
                            <th>Email</th>
                            <th>Telefon</th>
                            <th>Durum</th>
                            <th>Oluşturulma</th>
                            <th class="text-end">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for customer in customers %}
                            <tr>
                                <td>
                                    <span class="text-gray-800 fw-bold">{{ customer.id }}</span>
                                </td>
                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="symbol symbol-circle symbol-50px overflow-hidden me-3">
                                            <div class="symbol-label fs-3 bg-light-primary text-primary">
                                                {{ customer.companyName|slice(0, 2)|upper }}
                                            </div>
                                        </div>
                                        <div class="d-flex flex-column">
                                            <a href="{{ path('admin_customers_view', {id: customer.id}) }}" 
                                               class="text-gray-800 text-hover-primary mb-1 fw-bold">
                                                {{ customer.companyName }}
                                            </a>
                                            {% if customer.contactName %}
                                            <span class="text-gray-500 fs-7">{{ customer.contactName }}</span>
                                            {% endif %}
                                        </div>
                                    </div>
                                </td>
                                <td>
                                    <a href="mailto:{{ customer.email }}" class="text-gray-600 text-hover-primary">
                                        {{ customer.email }}
                                    </a>
                                </td>
                                <td>
                                    {% if customer.phone %}
                                    <span class="text-gray-800">{{ customer.phone }}</span>
                                    {% else %}
                                    <span class="text-muted">-</span>
                                    {% endif %}
                                </td>
                                <td>
                                    {% if customer.isActive %}
                                        <span class="badge badge-light-success">Aktif</span>
                                    {% else %}
                                        <span class="badge badge-light-secondary">Pasif</span>
                                    {% endif %}
                                </td>
                                <td>
                                    <span class="text-gray-800">{{ customer.createdAt ? customer.createdAt|date('d.m.Y') : '-' }}</span>
                                </td>
                                <td class="text-end">
                                    <button type="button" 
                                            class="btn btn-sm btn-light btn-active-light-primary"
                                            data-kt-menu-trigger="click" 
                                            data-kt-menu-placement="bottom-end">
                                        İşlemler
                                        <i class="ki-duotone ki-down fs-5 ms-1"></i>
                                    </button>
                                    <div class="menu menu-sub menu-sub-dropdown menu-column menu-rounded menu-gray-600 menu-state-bg-light-primary fw-semibold fs-7 w-150px py-4" 
                                         data-kt-menu="true">
                                        <div class="menu-item px-3">
                                            <a href="{{ path('admin_customers_view', {id: customer.id}) }}" 
                                               class="menu-link px-3">
                                                <i class="ki-duotone ki-eye fs-5 me-2">
                                                    <span class="path1"></span>
                                                    <span class="path2"></span>
                                                    <span class="path3"></span>
                                                </i>
                                                Görüntüle
                                            </a>
                                        </div>
                                        <div class="menu-item px-3">
                                            <a href="{{ path('admin_customers_edit', {id: customer.id}) }}" 
                                               class="menu-link px-3">
                                                <i class="ki-duotone ki-pencil fs-5 me-2">
                                                    <span class="path1"></span>
                                                    <span class="path2"></span>
                                                </i>
                                                Düzenle
                                            </a>
                                        </div>
                                        <div class="separator my-2"></div>
                                        <div class="menu-item px-3">
                                            <form method="post" 
                                                  action="{{ path('admin_customers_delete', {id: customer.id}) }}" 
                                                  onsubmit="return confirm('Bu müşteriyi silmek istediğinize emin misiniz?');">
                                                <button type="submit" class="menu-link px-3 text-danger w-100 text-start border-0 bg-transparent">
                                                    <i class="ki-duotone ki-trash fs-5 me-2">
                                                        <span class="path1"></span>
                                                        <span class="path2"></span>
                                                        <span class="path3"></span>
                                                        <span class="path4"></span>
                                                        <span class="path5"></span>
                                                    </i>
                                                    Sil
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center py-10">
                                    <div class="d-flex flex-column">
                                        <i class="ki-duotone ki-profile-user fs-5x text-gray-300 mb-5">
                                            <span class="path1"></span>
                                            <span class="path2"></span>
                                            <span class="path3"></span>
                                            <span class="path4"></span>
                                        </i>
                                        <span class="text-gray-500 fs-5 fw-semibold">Henüz müşteri eklenmemiş</span>
                                        <span class="text-muted fs-7 mt-2">Yeni müşteri eklemek için yukarıdaki butonu kullanın</span>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--end::Card-->
{% endblock %}
