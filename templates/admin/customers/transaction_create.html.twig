{% extends 'layout/_admin.html.twig' %}

{% block title %}Yeni İşlem - {{ customer.companyName }}{% endblock %}

{% block content %}
    <div class="card">
        <div class="card-body">
            <h4>Yeni İşlem</h4>
            <form method="post">
                <div class="row">
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Tür</label>
                        <select name="type" class="form-control">
                            <option value="debit">Borç (debit)</option>
                            <option value="credit">Alacak (credit)</option>
                        </select>
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Tutar</label>
                        <input type="number" step="0.01" name="amount" class="form-control" required />
                    </div>
                    <div class="col-md-3 mb-3">
                        <label class="form-label">Para Birimi</label>
                        <input type="text" name="currency" class="form-control" value="TRY" />
                    </div>
                    <div class="col-12 mb-3">
                        <label class="form-label">Açıklama</label>
                        <textarea name="description" class="form-control" rows="3"></textarea>
                    </div>
                    <div class="col-12">
                        <button class="btn btn-primary">Kaydet</button>
                        <a href="{{ path('admin_customers_transactions', {id: customer.id}) }}" class="btn btn-light ms-2">İptal</a>
                    </div>
                </div>
            </form>
        </div>
    </div>
{% endblock %}
